<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Patient</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Include Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <header>
      <!-- Navigation container -->
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <span class="navbar-brand mb-0 h1">Register Page</span>
        </div>
      </nav>
    </header>
    <div class="container login py-5 text-center">
      <!-- Back Button with Icon -->
      <div class="text-start mb-4">
        <a href="http://localhost:3000/" class="btn btn-secondary">
          <i class="bi bi-arrow-left-circle"></i> Back to Login
        </a>
      </div>

      <form id="registerForm" method="post">
        <div class="row mb-3">
          <div class="col-md-6">
            <input
              id="first_name"
              autocomplete="off"
              autofocus
              class="form-control"
              name="first_name"
              placeholder="First Name"
              type="text"
            />
          </div>
          <div class="col-md-6">
            <input
              id="last_name"
              class="form-control"
              name="last_name"
              placeholder="Last Name"
              type="text"
            />
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <input
              id="email"
              class="form-control"
              name="email"
              placeholder="Email"
              type="email"
            />
          </div>
          <!-- Input group for password with toggle button -->
          <div class="col-md-6">
            <div class="input-group">
              <input
                id="password"
                class="form-control"
                name="password"
                placeholder="Password"
                type="password"
              />
              <button
                class="btn btn-outline-secondary"
                type="button"
                onclick="togglePassword()"
              >
                <i class="bi bi-eye" id="togglePasswordIcon"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <input
              id="date_of_birth"
              class="form-control"
              name="date_of_birth"
              placeholder="01/01/1900"
              type="date"
            />
          </div>
          <div class="col-md-6">
            <select
              class="form-select mx-auto w-auto"
              name="symbol"
              id="gender"
            >
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <input
              id="phone"
              class="form-control"
              name="phone"
              placeholder="0912345678"
              type="tel"
              pattern="[0-9]{10}"
            />
          </div>
          <div class="col-md-6">
            <input
              id="address"
              class="form-control"
              name="address"
              placeholder="123 B Street"
              type="text"
            />
          </div>
        </div>

        <button id="registerButton" class="btn btn-primary w-100" type="button">
          Register
        </button>
      </form>
    </div>
    <script>
       function togglePassword() {
        const passwordField = document.getElementById("password");
        const toggleIcon = document.getElementById("togglePasswordIcon");
        if (passwordField.type === "password") {
          passwordField.type = "text";
          toggleIcon.classList.remove("bi-eye");
          toggleIcon.classList.add("bi-eye-slash");
        } else {
          passwordField.type = "password";
          toggleIcon.classList.remove("bi-eye-slash");
          toggleIcon.classList.add("bi-eye");
        }
      }
    </script>
    <script src="/js/register.js" crossorigin="anonymous"></script>

  </body>
</html>