<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Doctor Information</title>
  <link rel="stylesheet" href="css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .appointment-tab {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 320px;
      max-height: 400px;
      overflow-y: auto;
      z-index: 1050;
    }

    .appointment-tab .list-group-item {
      font-size: 14px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Hospital Management</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="javascript:location.reload()">Personal Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/patients">Patients List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/staffs">Staff List</a>
          </li>
          <li class="nav-item">
            <button id="logout-btn" class="btn btn-link nav-link">Log Out</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Doctor Information Section -->
    <div class="row justify-content-center mb-4">
      <div class="col-md-8 col-lg-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center">Doctor Information</h5>
            <div class="row">
              <div class="col-6">
                <p class="card-text">
                  <strong>Name:</strong>
                  <%= staff.first_name %>
                    <%= staff.last_name %>
                </p>
                <p class="card-text">
                  <strong>ID:</strong>
                  <%= staff.id %>
                </p>
                <p class="card-text">
                  <strong>Gender:</strong>
                  <%= staff.gender %>
                </p>
                <p class="card-text"></p>
                <strong>Role:</strong>
                <%= staff.role %>
                  </p>
              </div>
              <div class="col-6">
                <p class="card-text">
                  <strong>Email:</strong>
                  <%= staff.email %>
                </p>
                <p class="card-text">
                  <strong>Department id:</strong>
                  <%= staff.department_id %>
                </p>
                <p class="card-text">
                  <strong>Schedule:</strong>
                  <%= staff.schedule %>
                </p>
                <p class="card-text">
                  <strong>Salary:</strong>
                  <%= staff.salary %>
                </p>
              </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
              <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal"
                data-bs-target="#editStaffModal">
                Edit Information
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Patient List Section -->
    <div class="container-fluid p-2 text-center">
      <h1>List Of Patients</h1>
    </div>

    <!-- Search Bar -->
    <div class="container mb-4">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search Patients by Name..." id="search-bar" />
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-12"> <!-- Adjusted column width to 12 for full width -->
        <div class="card">
          <div class="card-body">
            <div class="row" id="patient-list">
              <% patients.forEach(function(patient){ %>
                <div class="col-12 col-md-6 col-lg-3 mb-4 patient-card"
                  data-name="<%= patient.first_name %> <%= patient.last_name %>" <!-- Correctly set data-name -->
                  >
                  <a href="/patients/<%= patient.id %>" class="text-decoration-none">
                    <div class="card h-100">
                      <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">
                          Patient ID: <%= patient.id %>
                        </h6>
                        <h5 class="card-title">
                          <%= patient.first_name %>
                            <%= patient.last_name %>
                        </h5>
                        <p class="card-text">
                          <strong>Date Of Birth:</strong>
                          <span class="formatted-date" data-dob="<%= patient.date_of_birth %>"></span><br />
                          <strong>Address:</strong>
                          <%= patient.address %><br />
                            <strong>Phone Number:</strong>
                            <%= patient.phone %>
                        </p>
                      </div>
                    </div>
                  </a>
                </div>
                <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end patients list -->
  </div>

  <!-- Appointment Tab -->
  <div class="card appointment-tab">
    <div class="card-body">
      <h5 class="card-title">Upcoming Appointments</h5>
      <div class="list-group">
        <!-- Upcoming Appointments -->
      </div>
    </div>
  </div>

  <!-- Modal for Editing Patient Information -->
  <div class="modal fade" id="editStaffModal" tabindex="-1" aria-labelledby="editStaffModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editStaffModalLabel">Edit Staff Information</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/staffs/update/<%= staff.id %>" method="post">
            <div class="mb-3">
              <label for="staffFirstName" class="form-label">First Name</label>
              <input type="text" name="first_name" class="form-control" id="staffFirstName"
                value="<%= staff.first_name %>" />
            </div>
            <div class="mb-3">
              <label for="staffLastName" class="form-label">Last Name</label>
              <input type="text" name="last_name" class="form-control" id="staffLastName"
                value="<%= staff.last_name %>" />
            </div>
            <div class="mb-3">
              <label for="staffID" class="form-label">Staff ID</label>
              <input type="text" name="id" class="form-control" id="staffID" value="<%= staff.id %>" readonly />
            </div>
            <div class="mb-3">
              <label for="staffID" class="form-label">Staff Email</label>
              <input type="text" name="email" class="form-control" id="staffEmail" value="<%= staff.email %>" />
            </div>
            <div class="mb-3">
              <label for="staffID" class="form-label">Staff Password</label>
              <input type="password" name="password" class="form-control" id="staffPassword" value="<%= staff.password %>" />
            </div>
            <div class="mb-3">
              <label for="staffRole d-none" class="form-label">Staff Role</label>
              <input type="text" name="role" class="form-control" id="staffPassword" value="<%= staff.role %>" />
            </div>
            <div class="mb-3 d-none">
              <label for="staffDepartmentID" class="form-label">Staff Department ID</label>
              <input type="text" name="department_id" class="form-control" id="staffDepartmentID" value="<%= staff.department_id %>" />
            </div>
            <div class="mb-3 d-none">
              <label for="staffSchedule" class="form-label">Staff Schedule</label>
              <input type="text" name="schedule" class="form-control" id="staffSchedule" value="<%= staff.schedule %>" />
            </div>
            <div class="mb-3 d-none">
              <label for="staffSalary" class="form-label">Staff Salary</label>
              <input type="text" name="salary" class="form-control" id="staffSalary" value="<%= staff.salary %>" />
            </div>
            <div class="mb-3 d-none">
              <label for="staffManagedBy" class="form-label">Staff Managed By</label>
              <input type="text" name="managed_by" class="form-control" id="staffManagedBy" value="<%= staff.managed_by %>" />
            </div>
            <div class="mb-3">
              <label for="staffGender" class="form-label">Staff Gender</label>
              <select name="gender" class="form-control" id="staffGender">
                <option value="Male" <%=staff.gender==="Male" ? "selected" : "" %>>Male</option>
                <option value="Female" <%=staff.gender==="Female" ? "selected" : "" %>>Female</option>
                <option value="Other" <%=staff.gender==="Other" ? "selected" : "" %>>Other</option>
              </select>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const logoutBtn = document.getElementById("logout-btn");
      logoutBtn.addEventListener("click", function () {
        localStorage.clear();
        window.location.href = "http://localhost:3000/";
      });

      // Search functionality
      const searchBar = document.getElementById("search-bar");
      const patientList = document.getElementById("patient-list");
      const patientCards = Array.from(
        patientList.getElementsByClassName("patient-card")
      );

      searchBar.addEventListener("input", function () {
        const searchTerm = this.value.toLowerCase();

        patientCards.forEach((card) => {
          const name = card.getAttribute("data-name").toLowerCase();
          if (name.includes(searchTerm)) {
            card.style.display = ""; // Show matching patients
          } else {
            card.style.display = "none"; // Hide non-matching patients
          }
        });
      });

      // Format date of birth
      const formattedDateElements = document.querySelectorAll(".formatted-date");
      formattedDateElements.forEach((element) => {
        const dob = new Date(element.getAttribute("data-dob"));
        element.textContent = dob.toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        });
      });
    });
  </script>
</body>

</html>