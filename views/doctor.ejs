<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor Information</title>
    <link rel="stylesheet" href="css/style.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      .appointment-tab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 320px;
        max-height: 400px;
        overflow-y: auto;
        z-index: 1050;
      }
      .appointment-tab .list-group-item {
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Hospital Management</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="#">Staff Information</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/patients">Staff List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Appointment List</a>
            </li>
            <li class="nav-item">
              <button id="logout-btn" class="btn btn-link nav-link">Log Out</button>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <!-- Doctor Information Section -->
      <div class="row justify-content-center mb-4">
        <div class="col-md-8 col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Doctor Information</h5>
              <div class="row">
                <div class="col-6">
                  <p class="card-text">
                    <strong>Name:</strong>
                    <%= staff.first_name %>
                      <%= staff.last_name %>
                  </p>
                  <p class="card-text">
                    <strong>ID:</strong>
                    <%= staff.id %>
                  </p>
                  <p class="card-text"></p>
                  <strong>Gender:</strong>
                  <%= staff.gender %>
                    </p>
                </div>
                <div class="col-6">
                  <p class="card-text">
                    <strong>Role:</strong>
                    <%= staff.role %>
                  </p>
                  <p class="card-text">
                    <strong>Department id:</strong>
                    <%= staff.department_id %>
                  </p>
                  <p class="card-text">
                    <strong>Schedule:</strong>
                    <%= staff.schedule %>
                  </p>
                  <p class="card-text">
                    <strong>Salary:</strong>
                    <%= staff.salary %>
                  </p>
                </div>
              </div>
              <div class="d-flex justify-content-center mt-3">
                <a href="edit-doctor-info.html" class="btn btn-primary me-2">Edit Information</a>
                <a href="create-appointment.html" class="btn btn-success">Create Appointment</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Patient List Section -->
      <div class="container-fluid p-5 text-center">
        <h1>List Of Patients</h1>
      </div>
    
      <!-- Search Bar -->
      <div class="container mb-4">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search Patients by Name..." id="search-bar">
        </div>
      </div>
    
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center mb-4">Patient List</h5>
              <div class="row" id="patient-list">
                <% patients.forEach(function(patient){ %>
                  <div class="col-12 col-md-6 col-lg-4 mb-4 patient-card" data-name="<%= patient.first_name %> <%= patient.last_name %>">
                    <a href="/patients/<%= patient.id %>" class="text-decoration-none">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="card-subtitle mb-2 text-muted">Patient ID: <%= patient.id %></h6>
                          <h5 class="card-title"><%= patient.first_name %> <%= patient.last_name %></h5>
                          <p class="card-text">
                            <strong>Date Of Birth:</strong> <span class="formatted-date" data-dob="<%= patient.date_of_birth %>"></span><br>
                            <strong>Address:</strong> <%= patient.address %><br>
                            <strong>Phone Number:</strong> <%= patient.phone %>
                          </p>
                        </div>
                      </div>
                    </a>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end patients list -->
    </div>

    <!-- Appointment Tab -->
    <div class="card appointment-tab">
      <div class="card-body">
        <h5 class="card-title">Upcoming Appointments</h5>
        <div class="list-group">
          <!-- Upcoming Appointments -->
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Fetch doctor data from local storage
        const doctorData = JSON.parse(localStorage.getItem("staffsData"))[0];

        if (doctorData) {
          document.getElementById("doctor-name").innerText = `${doctorData.first_name} ${doctorData.last_name}`;
          document.getElementById("doctor-id").innerText = doctorData.id;
          document.getElementById("doctor-email").innerText = doctorData.email;
          document.getElementById("doctor-gender").innerText = doctorData.gender;
          document.getElementById("doctor-role").innerText = doctorData.role;
          document.getElementById("doctor-department").innerText = doctorData.department_id;
          document.getElementById("doctor-schedule").innerText = doctorData.schedule;
          document.getElementById("doctor-salary").innerText = doctorData.salary;
        } else {
          console.error("No doctor data found in local storage.");
        }

        const logoutBtn = document.getElementById("logout-btn");
        logoutBtn.addEventListener("click", function () {
          localStorage.clear();
          window.location.href = "http://localhost:3000/";
        });

        // Search functionality
        const searchBar = document.getElementById("search-bar");
        const patientList = document.getElementById("patient-list");
        const patientCards = Array.from(patientList.getElementsByClassName("patient-card"));

        searchBar.addEventListener("input", function () {
          const searchTerm = this.value.toLowerCase();

          patientCards.forEach(card => {
            const name = card.getAttribute("data-name").toLowerCase();
            if (name.includes(searchTerm)) {
              card.style.display = ""; // Show matching patients
            } else {
              card.style.display = "none"; // Hide non-matching patients
            }
          });
        });
      });
    </script>
  </body>
</html>