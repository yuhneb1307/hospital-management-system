<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient Information</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/login.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Font Awesome for eye icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM5X22Ro2OXJFnDPdFdS6VXSG+XYyAi4YNE6BRJ"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <span class="navbar-brand mb-0 h1">Login Page</span>
        </div>
      </nav>
    </header>
    <div class="container login py-5 text-center">
      <form id="loginForm" method="post">
        <div class="mb-3">
          <input
            autocomplete="off"
            autofocus
            class="form-control mx-auto w-25"
            name="email"
            id="email"
            placeholder="Email"
            type="text"
          />
        </div>

        <!-- Input group with password field and toggle button -->
        <div class="mb-3 mx-auto w-25">
          <div class="input-group">
            <input
              type="password"
              class="form-control"
              placeholder="Password"
              id="password"
              aria-label="Password"
            />
            <button
              class="btn btn-outline-secondary"
              type="button"
              onclick="togglePassword()"
            >
              <i class="fas fa-eye" id="togglePasswordIcon"></i>
            </button>
          </div>
        </div>

        <div class="mb-3">
          <select class="form-select mx-auto w-auto" name="symbol" id="role">
            <option disabled="" selected="">Role</option>
            <option value="patients">Patient</option>
            <option value="staffs">Doctor</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <button id="loginButton" class="btn btn-primary" type="button">
          Log In
        </button>
      </form>
    </div>

    <script>
      function togglePassword() {
        const passwordField = document.getElementById("password");
        const toggleIcon = document.getElementById("togglePasswordIcon");
        if (passwordField.type === "password") {
          passwordField.type = "text";
          toggleIcon.classList.remove("fa-eye");
          toggleIcon.classList.add("fa-eye-slash");
        } else {
          passwordField.type = "password";
          toggleIcon.classList.remove("fa-eye-slash");
          toggleIcon.classList.add("fa-eye");
        }
      }
    </script>
  </body>
</html>
